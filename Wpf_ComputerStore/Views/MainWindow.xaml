<Window x:Class="Wpf_ComputerStore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ComputerStore"
        xmlns:VM="clr-namespace:Wpf_ComputerStore.ViewModels"
        xmlns:util="clr-namespace:Wpf_ComputerStore.Services"
        mc:Ignorable="d"     
        Title="Computer store"  Height="750" Width="1250" 
        Icon = "/Wpf_ComputerStore;component/static/comp.jpg"

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}" 
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"        
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"  Foreground="#6600CC" Closing="Window_Closing" >

    <!--Налаштування з сайту materialdesigninxaml 10-16 рядок-->

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FFCADDFA" Offset="1"/>
            <GradientStop Color="#FFB5B5D2" Offset="0.997"/>
            <GradientStop Color="#FF0B0C0E"/>
            <GradientStop Color="#FF5A6270"/>
            <GradientStop Color="#FF8490A4"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#BFEEEE"/>
            <Setter Property="BorderBrush" Value="Purple"/>
        </Style>

        <!-- Стиль для всплывающей подсказки -->
        <Style x:Key="ToolTipStyle" TargetType="ToolTip">
            <Setter Property="Foreground" Value="#7861ae"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="#efecf7" BorderBrush="#c1bad2" BorderThickness="1" CornerRadius="4" >
                            <ContentPresenter Margin="6" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid >
        <TabControl SelectedIndex="{Binding TabIndex}" IsSynchronizedWithCurrentItem="True" HorizontalContentAlignment="Left"  >

            <TabItem Width="138" Padding="0" >
                <TabItem.Header>
                    <TextBlock Text="Computer" FontSize="16" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>

                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition  />
                        <ColumnDefinition Width="60" />

                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Grid.Row="0"  Style="{StaticResource ButtonStyle}" Command="{Binding cmdGetComputer}" Padding="0" Height="30" Width="30" >
                        <Image Source="/static/house.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="All Computer "/>
                        </Button.ToolTip>
                    </Button>
                    <Button   Grid.Column="1" Grid.Row="0" Style="{StaticResource ButtonStyle}" Command="{Binding cmdAddComputer}" Padding="0" Height="33" Width="33" >
                        <Image Source="/static/plus-circle.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Add Computer "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="2" Grid.Row="0"  Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdEditComputer}" Padding="0" Height="30" Width="30" >
                        <Image Source="/static/pencil.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Edit Computer "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="3" Grid.Row="0"  Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdDeleteComputer}" Padding="0" Height="30" Width="30" >
                        <Image Source="/static/trash3.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Delete Computer "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="4" Grid.Row="0" Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdSaleComputer}"  Padding="0" Height="30" Width="30" >
                        <Image Source="/static/cart3.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Sale Computer"   />
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="5" Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdMakeDiscount}" Padding="0" Height="30" Width="30" FontWeight="Bold" FontSize="22"  >%
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource ToolTipStyle}" Content="Make Discount"   />
                    </Button.ToolTip>
                    </Button>

                    <Label Grid.Row="0" Grid.Column="6" Margin="10,30,10,10" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="14" Foreground="#6600CC" >Find by:</Label>

                    <ComboBox Grid.Row="0" Grid.Column="7" Padding="0" Margin="0,10,10,10"  Style="{StaticResource ComboBoxStyle}"  SelectedIndex="{Binding SelectedFindCriteriaC}">
                        <!--SelectedIndex="0"-->
                        <ComboBoxItem>Name</ComboBoxItem>
                        <ComboBoxItem>Type</ComboBoxItem>
                        <ComboBoxItem>Motherboard</ComboBoxItem>
                        <ComboBoxItem>RAM</ComboBoxItem>
                        <ComboBoxItem>CPU</ComboBoxItem>
                        <ComboBoxItem>HardDrive</ComboBoxItem>
                        <ComboBoxItem>SDD</ComboBoxItem>
                        <ComboBoxItem>VideoCard</ComboBoxItem>
                        <ComboBoxItem>PowerSupply</ComboBoxItem>
                        <ComboBoxItem>Price</ComboBoxItem>

                    </ComboBox>
                    <TextBox Grid.Row="0" Grid.Column="8"  Margin="10,20,10,20"  Text="{Binding CriteriaComputer}" ></TextBox>
                    <Button  Grid.Row="0" Grid.Column="9" Style="{StaticResource ButtonStyle}"  Command="{Binding cmdFindComputer}"  Padding="0" Height="30" Width="30">
                        <Image Source="/static/search.png" Height="25"  />
                        <Button.ToolTip>
                            <!-- Применение стиля всплывающей подсказки -->
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Find Computer "/>
                        </Button.ToolTip>
                    </Button>
                    <ListView util:GridViewSort.AutoSort="True"  ItemContainerStyle="{StaticResource ListViewItemOptionStyle}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10" Margin="10,10,10,10"  BorderThickness="0 2 0 0" ItemsSource="{Binding ComputersList}"  SelectedItem="{Binding SelectedComputer}"  >
                        <ListView.View >
                            <GridView AllowsColumnReorder="true" >
                                <GridView.ColumnHeaderToolTip>
                                    <ToolTip Style="{StaticResource ToolTipStyle}" Content="Computers Information "/>
                                </GridView.ColumnHeaderToolTip>
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Foreground" Value="#b47fff" />
                                        <Setter Property="FontSize" Value="16" />
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn  Header=" Name" DisplayMemberBinding="{Binding Path=Name}" util:GridViewSort.PropertyName="Name"  />
                                <GridViewColumn  Header=" Computer Type" DisplayMemberBinding="{Binding Path=ComputerType.Name}"   />
                                <GridViewColumn  Header=" RAM" DisplayMemberBinding="{Binding Path=RAM.Name}"   />
                                <GridViewColumn  Header=" Motherboard" DisplayMemberBinding="{Binding Path=Motherboard.Name}"   />
                                <GridViewColumn  Header=" CPU" DisplayMemberBinding="{Binding Path=CPU.Name}"   />
                                <GridViewColumn  Header=" HardDrive" DisplayMemberBinding="{Binding Path=HardDrive.Name}"   />
                                <GridViewColumn  Header=" SDD" DisplayMemberBinding="{Binding Path=SDD.Name}"   />
                                <GridViewColumn  Header=" VideoCard" DisplayMemberBinding="{Binding Path=VideoCard.Name}"   />
                                <GridViewColumn  Header=" PowerSupply" DisplayMemberBinding="{Binding Path=PowerSupply.Name}"   />
                                <GridViewColumn  Header=" Quantity" DisplayMemberBinding="{Binding Path=Quantity}" util:GridViewSort.PropertyName="Quantity" />
                                <GridViewColumn  Header=" Price" DisplayMemberBinding="{Binding Path=Price}" util:GridViewSort.PropertyName="Price" />
                            </GridView>
                        </ListView.View>

                    </ListView>
                </Grid>
            </TabItem>

            <!--<TabItem Header="Computer Details">-->
            <TabItem Width="158">
                <TabItem.Header>
                    <TextBlock Text="Computer Details" FontSize="16" />
                </TabItem.Header>
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition Height="70" />
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition  />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Grid.Row="0"  Style="{StaticResource ButtonStyle}"  Command="{Binding cmdGetComputerDetail}"  Padding="0" Height="30" Width="30" >
                        <Image Source="/static/house.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="All Components "/>
                        </Button.ToolTip>
                    </Button>

                    <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource ButtonStyle}"  Command="{Binding cmdAddComputerDetail}" Padding="0" Height="30" Width="30" >
                        <Image Source="/static/plus-circle.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Add Components "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="2" Grid.Row="0"  Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True"  Command="{Binding cmdEditComputerDetail}" Padding="0" Height="30" Width="30" >
                        <Image Source="/static/pencil.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Edit Components "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="3" Grid.Row="0"  Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdDeleteComputerDetail}" Padding="0" Height="30" Width="30" >
                        <Image Source="/static/trash3.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Delete Components "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="4" Grid.Row="0"  Style="{StaticResource ButtonStyle}"  Padding="0" Height="30" Width="30" Command="{Binding cmdSaleComputerDetail}" ToolTipService.ShowOnDisabled="True"  >
                        <Image Source="/static/cart3.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Sale Components "/>
                        </Button.ToolTip>
                    </Button>

                    <Button Grid.Row="0" Grid.Column="5" Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdMakeDiscount}" Padding="0" Height="30" Width="30" FontWeight="Bold" FontSize="22"  >%
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Make Discount"   />
                        </Button.ToolTip>
                    </Button>
                    <Label Grid.Row="0" Grid.Column="6" Margin="10,30,10,10"  FontWeight="Bold" FontSize="14" Foreground="#6600CC" >Find by:</Label>
                    <ComboBox Grid.Row="0" Grid.Column="7" Padding="0"  Style="{StaticResource ComboBoxStyle}" SelectedIndex="{Binding SelectedFindCriteriaCD}">

                        <ComboBoxItem>Name</ComboBoxItem>
                        <ComboBoxItem>Description</ComboBoxItem>
                        <ComboBoxItem>Category</ComboBoxItem>
                        <ComboBoxItem>Number</ComboBoxItem>
                    </ComboBox>
                    <TextBox Grid.Row="0" Grid.Column="8"  Margin="10,20,10,20" Text="{Binding CriteriaComputerDetail}" ></TextBox>
                    <Button  Grid.Row="0" Grid.Column="9" Style="{StaticResource ButtonStyle}" Command="{Binding cmdFindComputerDetail}"  Padding="0" Height="30" Width="30">
                        <Image Source="/static/search.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Find Components "/>
                        </Button.ToolTip>
                    </Button>

                    <Label Grid.Row="1" Grid.Column="7" Margin="10,28,10,10" FontWeight="Bold" FontSize="14" Foreground="#6600CC" >Sort by:</Label>

                    <ComboBox Grid.Row="1" Grid.Column="8" Padding="0" Style="{StaticResource ComboBoxStyle}" Margin="10,10,10,10" SelectedIndex="{Binding SelectedCDSortCriterion}">
                        <ComboBoxItem>Name</ComboBoxItem>
                        <ComboBoxItem>Quantity</ComboBoxItem>
                        <ComboBoxItem>Price</ComboBoxItem>
                    </ComboBox>

                    <Button Grid.Row="1" Grid.Column="9" Padding="0" Height="30" Width="30" Style="{StaticResource ButtonStyle}" Command="{Binding cmdSortComputerDetail}">
                        <Image Source="/static/search.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Sort Computer Detail "/>
                        </Button.ToolTip>
                    </Button>

                    <ListView ItemContainerStyle="{StaticResource ListViewItemOptionStyle}" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="10" Margin="10,10,10,10"  BorderThickness="0 2 0 0" ItemsSource="{Binding ComputerDetailsList}" SelectedItem="{Binding SelectedComputerDetail}">
                        <ListView.View >
                            <GridView AllowsColumnReorder="true" >
                                <GridView.ColumnHeaderToolTip>
                                    <ToolTip Style="{StaticResource ToolTipStyle}" Content="Components Information "/>
                                </GridView.ColumnHeaderToolTip>
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Foreground" Value="#b47fff" />
                                        <Setter Property="FontSize" Value="16" />
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn Header="Name"  DisplayMemberBinding="{Binding Path=Name}"/>
                                <GridViewColumn Header="Number" DisplayMemberBinding="{Binding Path=ID}"/>
                                <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Path=Category.Name}"/>
                                <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Path=Quantity}"/>
                                <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Path=Description}"/>
                                <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Path=Price}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
           
            <!--<TabItem Header="Peripherals">-->
            <TabItem Width="138">
                <TabItem.Header>
                    <TextBlock Text="Peripherals" FontSize="16" />
                </TabItem.Header>
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition Height="70" />
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition  />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>

                    <Button  Grid.Row="0" Grid.Column="0" Style="{StaticResource ButtonStyle}" Command="{Binding GetPeripheralsCommand}" Padding="0" Height="30" Width="30" >
                        <Image Source="/static/house.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="All Peripherias"/>
                        </Button.ToolTip>
                    </Button>
                    <Button  Grid.Row="0" Grid.Column="1" Padding="0" Height="30" Width="30" Style="{StaticResource ButtonStyle}" Command="{Binding AddCommand}">
                        <Image Source="/static/plus-circle.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}"  Content="Add Peripheral "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="2" Padding="0" Height="30" Width="30" Style="{StaticResource ButtonStyle}"  Command="{Binding EditCommand}" ToolTipService.ShowOnDisabled="True" >
                        <Image Source="/static/pencil.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Edit Peripheral "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="3" Padding="0" Height="30" Width="30" Style="{StaticResource ButtonStyle}" Command="{Binding DeleteCommand}" ToolTipService.ShowOnDisabled="True" >
                        <Image Source="/static/trash3.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Delete Peripheral "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="4" Padding="0" Height="30" Width="30" Style="{StaticResource ButtonStyle}" Command="{Binding SalePeripheralCommand}" ToolTipService.ShowOnDisabled="True">
                        <Image Source="/static/cart3.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Sale Peripheral "/>
                        </Button.ToolTip>
                    </Button>

                    <Button Grid.Row="0" Grid.Column="5" Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdMakeDiscount}" Padding="0" Height="30" Width="30" FontWeight="Bold" FontSize="22"  >%
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Make Discount"   />
                        </Button.ToolTip>
                    </Button>
                    <Label Grid.Row="0" Grid.Column="6" Margin="10,30,10,10" FontWeight="Bold" FontSize="14" Foreground="#6600CC" >Find by:</Label>
                    <ComboBox Grid.Row="0" Grid.Column="7" Padding="0" Style="{StaticResource ComboBoxStyle}"  SelectedIndex="{Binding SelectedFindCriteriaPeripheral}">
                        <ComboBoxItem>Name</ComboBoxItem>
                        <ComboBoxItem>Description</ComboBoxItem>
                        <ComboBoxItem>PeripheriaType</ComboBoxItem>
                        <ComboBoxItem>Quantity</ComboBoxItem>
                    </ComboBox>
                    <TextBox Grid.Row="0" Grid.Column="8" Margin="10,20,10,20" Text="{Binding CriteriaPeripheral}" ></TextBox>
                    <Button Grid.Row="0" Grid.Column="9" Padding="0" Height="30" Width="30" Style="{StaticResource ButtonStyle}" Command="{Binding FindCommand}">
                        <Image Source="/static/search.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Find Peripheral "/>
                        </Button.ToolTip>
                    </Button>

                    <Label Grid.Row="1" Grid.Column="7" Margin="10,28,10,10" FontWeight="Bold" FontSize="14" Foreground="#6600CC" >Sort by:</Label>

                    <ComboBox Grid.Row="1" Grid.Column="8" Padding="0" Style="{StaticResource ComboBoxStyle}" Margin="10,10,10,10" SelectedIndex="{Binding SelectedSortCriterion}">
                        <ComboBoxItem>Name</ComboBoxItem>
                        <ComboBoxItem>Quantity</ComboBoxItem>
                        <ComboBoxItem>Price</ComboBoxItem>
                    </ComboBox>

                    <Button Grid.Row="1" Grid.Column="9" Padding="0" Height="30" Width="30" Style="{StaticResource ButtonStyle}" Command="{Binding SortCommand}">
                        <Image Source="/static/search.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Sort Peripheral "/>
                        </Button.ToolTip>
                    </Button>

                    <ListView Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="10" ItemContainerStyle="{StaticResource ListViewItemOptionStyle}" Margin="10,10,10,10"  BorderThickness="0 2 0 0" ItemsSource="{Binding PeripheralsList}" SelectedItem="{Binding SelectedPeripherals, Mode=TwoWay}">
                        <ListView.View>
                            <GridView AllowsColumnReorder="true" >
                                <GridView.ColumnHeaderToolTip>
                                    <ToolTip Style="{StaticResource ToolTipStyle}" Content="Peripheral Information"/>
                                </GridView.ColumnHeaderToolTip>
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Foreground" Value="#b47fff" />
                                        <Setter Property="FontSize" Value="16" />
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn  Header=" Name " DisplayMemberBinding="{Binding Path=Name}"/>
                                <GridViewColumn  Header=" Quantity " DisplayMemberBinding="{Binding Path=Quantity}"/>
                                <GridViewColumn  Header=" PeripheriaType " DisplayMemberBinding="{Binding Path=PeripheralsType.Name}"/>
                                <GridViewColumn  Header=" Price " DisplayMemberBinding="{Binding Path=Price}"/>
                                <GridViewColumn  Header="Description" DisplayMemberBinding="{Binding Path=Description}"/>
                            </GridView>
                        </ListView.View>

                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Width="134">
                <TabItem.Header>
                    <TextBlock Text="OrderCart" FontSize="16" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>

                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Grid.Row="0"  Style="{StaticResource ButtonStyle}" Padding="0" Height="30" Width="30" Command="{Binding cmdMinus}">
                        <Image Source="/static/dash.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Delete one"/>
                        </Button.ToolTip>
                    </Button>
                    <TextBox IsEnabled="False" Grid.Column="1" Grid.Row="0"  FontSize="25" Text="{Binding Quantity}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Button Grid.Column="2" Grid.Row="0"  Style="{StaticResource ButtonStyle}" Padding="0" Height="30" Width="30" Command="{Binding cmdPlus}">
                        <Image Source="/static/plus-circle.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Add one"/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="3" Grid.Row="0" Style="{StaticResource ButtonStyle}" Command="{Binding cmdDeleteFromCart}" Padding="0" Height="30" Width="30">
                        <Image Source="/static/trash3.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Delete selected item"/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="4" Grid.Row="0" Style="{StaticResource ButtonStyle}" Command="{Binding cmdClearCart}" Padding="0" Height="30" Width="30">
                        <Image Source="/static/x.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Clear order cart"/>
                        </Button.ToolTip>
                    </Button>
                    <Label  Grid.Column="5" Grid.Row="0" Content="Customer name:"  FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="6" Grid.Row="0" Padding="0" Margin="0,10,10,10" SelectedItem="{Binding SelectedCustomer}" ItemsSource="{Binding CustomersList}" DisplayMemberPath="Name" Style="{StaticResource ComboBoxStyle}"/>

                    <Label  Grid.Column="7" Grid.Row="0" Content="Seller:"  FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="8" Padding="0" Margin="0,10,10,10"  Style="{StaticResource ComboBoxStyle}"  SelectedItem="{Binding SelectedSeller}" ItemsSource="{Binding Sellers}" DisplayMemberPath="Name"/>

                    <Button Grid.Column="9" Grid.Row="0"  Style="{StaticResource ButtonStyle}" Padding="0" Height="30" Width="30" Command="{Binding cmdSale}">
                        <Image Source="/static/cart3.png" Height="25" />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Sale"/>
                        </Button.ToolTip>
                    </Button>

                    <ProgressBar Grid.Column="10" Grid.Row="0" Value="{Binding ProgressValue, Mode= TwoWay }"
           x:Name="DeterminateCircularProgress"
           Style="{StaticResource MaterialDesignCircularProgressBar}" />
                    <ListView ItemContainerStyle="{StaticResource ListViewItemOptionStyle}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="12" Margin="10,10,10,10"  BorderThickness="0 2 0 0" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">

                        <ListView.View>
                            <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Order Cart Information"  >
                                <GridViewColumn Header=" Name " DisplayMemberBinding="{Binding Path=Item.Name}"/>
                                <GridViewColumn Header=" Quantity " DisplayMemberBinding="{Binding Path= Quantity}"/>
                                <GridViewColumn Header=" Price " DisplayMemberBinding="{Binding Path=Item.Price}"/>
                            </GridView>
                        </ListView.View>

                    </ListView>
                </Grid>
            </TabItem>


            <TabItem Width="138">
                <TabItem.Header>
                    <TextBlock Text="Customers" FontSize="16" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>

                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition  />

                    </Grid.ColumnDefinitions>

                    <Button   Grid.Column="0" Grid.Row="0" Style="{StaticResource ButtonStyle}" Command="{Binding cmdAddCustomer}" Padding="0" Height="33" Width="33" >
                        <Image Source="/static/plus-circle.png" Height="25"  />
                        <Button.ToolTip>
                            <ToolTip Style="{StaticResource ToolTipStyle}" Content="Add Customer "/>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Column="1" Grid.Row="0"  Style="{StaticResource ButtonStyle}" ToolTipService.ShowOnDisabled="True" Command="{Binding cmdEditCustomer}" Padding="0" Height="30" Width="30" >
