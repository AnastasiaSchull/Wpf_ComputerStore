<Window x:Class="Wpf_ComputerStore.Views.SellerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ComputerStore.Views"
        mc:Ignorable="d"
        Title="SellerWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Label Content="Seller" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="24"/>
        <Label Content="Name:" Grid.Row="1" FontSize="18"/>
        <Label Content="Email:" Grid.Row="2" FontSize="18"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Email}"/>
        <Button Content="Save" Grid.Row="3" Command="{Binding cmdSave}" Click="CloseWindow" />
        <Button Content="Cancel" Grid.Column="1" Grid.Row="3" Width="100" HorizontalAlignment="Right" Click="CloseWindow"/>
    </Grid>
</Window>
